\documentclass[a4paper,12pt]{article}

% サンセリフ系のフォントを全体に指定
\usepackage{fontspec}
\setmainfont{Noto Sans CJK JP}
\setsansfont{Noto Sans CJK JP}
\setmonofont{Noto Sans Mono CJK JP}

\usepackage[margin=25mm]{geometry}

\usepackage{setspace}
\setstretch{1.4}

\usepackage{hyperref}
\hypersetup{
  colorlinks=true,
  linkcolor=blue,
  urlcolor=blue,
  citecolor=blue,
  pdfborder={0 0 0}
}

% セクション見出しを太く・大きく
\usepackage{sectsty}
\sectionfont{\LARGE\bfseries}
\subsectionfont{\Large\bfseries}
\subsubsectionfont{\large\bfseries}

\usepackage{titlesec}
\titlespacing*{\section}{0pt}{2.0em}{1.0em}
\titlespacing*{\subsection}{0pt}{1.5em}{0.7em}
\titlespacing*{\subsubsection}{0pt}{1.0em}{0.5em}

\setlength{\parskip}{0.8em}
\setlength{\parindent}{0pt}

$if(title)$
\title{$title$}
$endif$
$if(author)$
\author{$for(author)$$author$$sep$ \\ $endfor$}
$endif$
$if(date)$
\date{$date$}
$else$
\date{}
$endif$

\begin{document}

$if(title)$
\maketitle
$endif$

$if(abstract)$
\begin{abstract}
$abstract$
\end{abstract}
$endif$

$body$

\end{document}